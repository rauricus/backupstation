proc            /proc           proc    defaults          0       0
PARTUUID=213a4e0b-01  /boot           vfat    defaults          0       2
PARTUUID=213a4e0b-02  /               ext4    defaults,noatime  0       1

/dev/sda1	/mnt/ext_hdd	ext4	rw	0	0

